<Window x:Class="TicketReservation.FileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketReservation"
        mc:Ignorable="d"
        Height="160" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">    
    <DockPanel>
        <TextBlock Name="messageTextBlock" DockPanel.Dock="Top" Margin="10" TextWrapping="Wrap" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="OK" Margin="10" Click="ExitOK" MinWidth="50" />
            <Button Content="Cancel" Margin="10" Click="Exit" MinWidth="50" />
        </StackPanel>
        <TextBox Name="inputTextBox" Margin="10" />
    </DockPanel>
</Window>
